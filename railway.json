{
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm install"
    },
    "preDeployCommand": "source /app/venv/bin/activate && pip install --no-cache-dir -r backend/requirements.txt",
    "start": "source /app/venv/bin/activate && python3 -m uvicorn backend.main:app --host 0.0.0.0 --port 8080"
  }